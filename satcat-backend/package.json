{
  "name": "aetherlink-satcat-backend",
  "version": "1.0.0",
  "description": "Satellite catalog backend for AetherLink - pulls data from Space-Track.org and SatNOGS DB",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "ingest": "tsx src/cli/ingest.ts",
    "fetch-tles": "tsx src/cli/fetch-tles-for-catalog.ts",
    "fetch-gp": "tsx src/cli/fetch-gp-compliant.ts",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "satellite",
    "tracking",
    "space-track",
    "satnogs",
    "cesium",
    "tle"
  ],
  "author": "AetherLink",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.8.4",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "prisma": "^5.21.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
