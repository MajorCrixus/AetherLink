# AetherLink SATCOM Control System - Environment Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# Server Configuration
# ============================================================================

# Backend server settings
HOST=0.0.0.0
PORT=9000
DEBUG=True

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite database URL
DATABASE_URL=sqlite+aiosqlite:///./aetherlink.db

# ============================================================================
# Security Configuration
# ============================================================================

# Secret key for JWT tokens (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=aetherlink-dev-secret-key-change-in-production

# Access token expiration time (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins for CORS (comma-separated)
# Examples:
#   Development: http://localhost:3000,http://localhost:3001
#   Production: http://192.168.1.100:3000,http://192.168.1.100:9000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.68.135:3000,http://192.168.68.135:9000

# ============================================================================
# Telemetry Configuration
# ============================================================================

# Telemetry update rate (Hz)
TELEMETRY_RATE_HZ=10.0

# Demo mode (True = simulated hardware, False = real hardware)
DEMO_MODE=False

# ============================================================================
# Hardware Configuration
# ============================================================================

# GPS configuration
GPS_PORT=/dev/gps
GPS_BAUD=4800

# IMU configuration
IMU_PORT=/dev/imu
IMU_BAUD=9600

# RS485 servo bus configuration
RS485_PORT=/dev/rs485
RS485_BAUD=38400

# ============================================================================
# Servo Configuration
# ============================================================================

# Servo motor addresses on RS485 bus
SERVO_AZ_ADDR=1
SERVO_EL_ADDR=2
SERVO_CL_ADDR=3

# ============================================================================
# Safety Limits (degrees)
# ============================================================================

# Azimuth limits
AZ_MIN=-300.0
AZ_MAX=300.0

# Elevation limits
EL_MIN=-59.0
EL_MAX=59.0

# Cross-level limits
CL_MIN=-10.0
CL_MAX=10.0

# ============================================================================
# Motion Limits
# ============================================================================

# Maximum speed (RPM)
MAX_SPEED_RPM=45

# Default acceleration
DEFAULT_ACCELERATION=10

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable logging to file
LOG_TO_FILE=True

# Log file path
LOG_FILE=aetherlink.log

# ============================================================================
# CLI Configuration
# ============================================================================

# Whitelisted CLI commands (comma-separated)
CLI_ALLOWED_COMMANDS=status,help,version,limits,position,home,stop,calibrate
